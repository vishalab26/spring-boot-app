pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    IMAGE_NAME = "lavanyags88/hello-spring"
    DOCKER_HUB_CRED = credentials('docker')
    DEPLOY_SERVER_PROD = "ubuntu@54.186.200.158"    // Replace with your prod EC2 IP
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
        sh 'echo ‚úÖ Code checkout completed'
      }
    }

    stage('Run Unit & Integration Tests') {
      steps {
        echo "üß™ Running Maven Unit and Integration Tests..."
        sh '''
          mvn clean test
          mvn verify
        '''
      }
    }

    stage('Dependency Vulnerability Scan') {
      steps {
        echo "üîé Scanning project dependencies with Trivy..."
        sh '''
          trivy fs --exit-code 0 --severity HIGH,CRITICAL . > trivy-deps-report.txt
          echo "üîç Dependency scan complete. Results saved to trivy-deps-report.txt"
        '''
      }
    }

    stage('Build & Push Docker Image') {
      steps {
        echo "üê≥ Building and Pushing Docker image..."
        sh '''
          docker build -t $IMAGE_NAME:${BUILD_NUMBER} .
          echo "$DOCKER_HUB_CRED_PSW" | docker login -u "$DOCKER_HUB_CRED_USR" --password-stdin
          docker push $IMAGE_NAME:${BUILD_NUMBER}
          docker logout
        '''
      }
    }

    stage('Container Vulnerability Scan') {
      steps {
        echo "üõ°Ô∏è Scanning Docker image for vulnerabilities using Trivy..."
        sh '''
          trivy image --exit-code 0 --severity HIGH,CRITICAL $IMAGE_NAME:${BUILD_NUMBER} > trivy-image-report.txt
          echo "üîç Trivy image scan complete. Results saved to trivy-image-report.txt"
        '''
      }
    }

    stage('Deploy to Staging (Jenkins Server)') {
      steps {
        echo "üöÄ Deploying to Staging Environment on Jenkins server..."
        sh '''
          docker pull $IMAGE_NAME:${BUILD_NUMBER}
          docker stop hello-spring-staging || true
          docker rm hello-spring-staging || true
          docker run -d -p 8081:8080 --name hello-spring-staging $IMAGE_NAME:${BUILD_NUMBER}
        '''
      }
    }

    stage('Approval for Production Deploy') {
      steps {
        script {
          input message: '‚úÖ Staging looks good? Approve deployment to Production?', ok: 'Deploy to Prod'
        }
      }
    }

    stage('Deploy to Production Environment') {
      steps {
        echo "üöÄ Deploying to Production..."
        sshagent(['ssh-key']) {
          sh '''
            ssh -o StrictHostKeyChecking=no $DEPLOY_SERVER_PROD "
              docker pull $IMAGE_NAME:${BUILD_NUMBER} &&
              docker stop hello-spring || true &&
              docker rm hello-spring || true &&
              docker run -d -p 80:8080 --name hello-spring $IMAGE_NAME:${BUILD_NUMBER}
            "
          '''
        }
      }
    }
  }

  post {
    always {
      echo "üì¶ Archiving Trivy reports..."
      archiveArtifacts artifacts: 'trivy-deps-report.txt,trivy-image-report.txt', fingerprint: true
    }

    success {
      echo "‚úÖ CI/CD Pipeline executed successfully ‚Äî App deployed to Production!"
      slackSend channel: '#devops-alerts', color: 'good', message: "‚úÖ Build #${BUILD_NUMBER} succeeded! - ${JOB_NAME}"
    }

    failure {
      echo "‚ùå Build or Deployment failed. Check Jenkins logs for details."
      slackSend channel: '#devops-alerts', color: 'danger', message: "‚ùå Build #${BUILD_NUMBER} failed! - ${JOB_NAME}"
      emailext subject: "‚ùå Build #${BUILD_NUMBER} Failed - ${JOB_NAME}",
               body: "Please check the Jenkins console output for details.",
               to: "gslavanyagowda@gmail.com"
    }
  }
}
